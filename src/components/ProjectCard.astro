---
import { Card, CardContent, CardDescription, CardFooter, CardHeader, CardTitle } from "@/components/starwind/card";
import { Button } from "@/components/starwind/button";

const {project, desc} = Astro.props;
---
<Card
  class="w-full relative overflow-hidden rounded-none shadow-none bg-transparent border-white/30"
  slot="preview"
>
  <CardContent class="relative z-10 flex flex-col justify-between p-0 bg-transparent">
    
    <!-- Foreground Image -->
    <div class="relative">
      <img
        src={project.data.image}
        alt={project.data.title}
        class="w-full object-cover rounded-none"
        loading="lazy"
      />
    </div>

    <!-- Header -->
    <div class="p-4 bg-transparent">
      <CardTitle class="font-light text-gray-900 drop-shadow-md">
        {project.data.title}
      </CardTitle>
      <CardDescription class="text-gray-800/90 drop-shadow-sm">
        <small>{project.data.published}</small>
        <div></div>
        {project.data.description}
      </CardDescription>

      <!-- Tech Tags -->
      {project.data.tech && (
        <div class="flex flex-wrap gap-2 mt-2">
          {project.data.tech.map(tech => (
            <span class="bg-transparent text-orange-500 text-xs rounded-md drop-shadow-sm">
              {tech}
            </span>
          ))}
        </div>
      )}
    </div>

    <!-- Footer -->
    <CardFooter class="flex justify-between p-4 bg-transparent">
      <Button href={`/projects/${project.data.slug}`} variant="outline">
        View
      </Button>
    </CardFooter>

  </CardContent>
</Card>
