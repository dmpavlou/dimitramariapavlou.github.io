---
import "../styles/starwind.css"
import Layout from "@/layouts/Layout.astro";
import { Button } from "@/components/starwind/button";
import ProjectCard from "@/components/ProjectCard.astro";
import Project from "@/components/Project.astro";
---

<html lang="en">

<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contact | Dimitra Maria Pavlou</title>
</head>

<body class="text-gray-800 antialiased bg-transparent">
  <Layout>
    <!-- Background Wrapper -->
    <div class="fixed inset-0 -z-10 overflow-hidden">
      <!-- Blurred Abstract Background -->
      <div
      class="absolute inset-0 bg-cover bg-center filter blur-[70px] scale-75 brightness-400 contrast-300 opacity-40"
        style="background-image: url('/images/background.jpg');"
        aria-hidden="true"
      ></div>

      <!-- Very subtle translucent veil for text readability -->
      <div class="absolute inset-0 bg-white/40 backdrop-blur-[2px]"></div>
    </div>

    <!-- 🔹 Main Content -->
    <main class="relative z-10 max-w-6xl mx-auto px-6 py-24 flex flex-col items-center text-center bg-transparent">

      <!-- Force any parent white backgrounds to become transparent -->
      <style>
        main, body, .layout-wrapper, .page-container {
          background: transparent !important;
        }
      </style>

      <!-- Title -->
      <h1 class="font-bold text-6xl mb-12">Contact</h1>
      <p class="text-lg text-gray-700 mb-16 max-w-2xl">
        Feel free to reach out through one of the platforms below.
      </p>

      <!-- 🌐 Social Media Icons -->
      <div class="flex space-x-10">
        <!-- Instagram -->
        <a
          href="https://www.instagram.com/smitsmitsmits/"
          target="_blank"
          class="transform transition-all duration-300 hover:scale-125 hover:brightness-125 hover:text-orange-500"
        >
          <img src="/images/instagram.svg" alt="Instagram" class="w-10 h-10" />
        </a>

        <!-- LinkedIn -->
        <a
          href="https://www.linkedin.com/in/dimitra-maria-pavlou-37380b246/"
          target="_blank"
          class="transform transition-all duration-300 hover:scale-125 hover:brightness-125 hover:text-orange-500"
        >
          <img src="/images/linkedin.svg" alt="LinkedIn" class="w-10 h-10" />
        </a>

        <!-- GitHub -->
        <a
          href="https://github.com/dmpavlou"
          target="_blank"
          class="transform transition-all duration-300 hover:scale-125 hover:brightness-125 hover:text-orange-500"
        >
          <img src="/images/github.svg" alt="GitHub" class="w-10 h-10" />
        </a>
      </div>
    </main>
  </Layout>
</body>

</html>
